{
    "id": "image.json",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "type": "object",
    "required": ["source", "image_paths"],
    "properties": {
        "source": {
            "type": "string",
            "description": "url to the source",
            "pattern": "^(?:http(s)?:\/\/)?[\\w.-]+(?:\\.[\\w\\.-]+)+[\\w\\-\\._~:\/?#[\\]@!\\$&'\\(\\)\\*\\+,;=.]+$"
        },
        "additional": {
            "type": "array",
            "description": "additional links",
            "items": {
                "type": "string",
                "pattern": "^(?:http(s)?:\/\/)?[\\w.-]+(?:\\.[\\w\\.-]+)+[\\w\\-\\._~:\/?#[\\]@!\\$&'\\(\\)\\*\\+,;=.]+$"
            },
            "uniqueItems": true
        },
        "image_paths": {
            "type": "array",
            "description": "paths to the images",
            "minItems": 1,
            "maxItems": 4,
            "items": {
                "type": "string",
                "pattern": "^\\S+(\/[^\\s]+)*\\.(png|gif|jpe?g|mp4)$"
            },
            "uniqueItems": true
        },
        "author": {
            "type": "object",
            "handle": {
                "type": "string"
            },
            "name": {
                "type": "string"
            }
        },
        "description": {
            "type": "string",
            "maxLength": 400
        },
        "posted": {
            "type": "string",
            "description": "url to the posted toot"
        },
        "nsfw": {
            "type": "boolean"
        },
        "cw": {
            "type": "string",
            "description": "content warning"
        }
    }
}
